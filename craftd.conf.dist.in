{
  "00": "craftd config file.  Must be valid JSON.",

  "server": {
    "daemonize": true,

    "connection": {
        "bind": {
            "ipv4": "0.0.0.0",
            "ipv6": "::",
        },

        "port": 25565
    },

    "workers": 10,

    "rate": {
        "sunrise": 20,
        "day": 20,
        "sunset": 20,
        "night": 20
    },

    "max-listenbacklog": 16,
    "minecraft-stringmax": 100,

    "file": {
        "motd": "@sysconfdir@/craftd/motd.conf.dist",
        "world": "@datadir@/craftd/world"
    },
  },

  "httpd": {
    "enabled": true,

    "connection": {
        "bind": {
            "ipv4": "127.0.0.1",
            "ipv6": "::1",
        },

        "port": 25566,
    }

    "root": "@datadir@/craftd/htdocs/"
  }
}

