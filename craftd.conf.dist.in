{
  "00": "craftd config file.  Must be valid JSON.",

  "server": {
    "daemonize": false,

    "connection": {
        "bind": {
            "ipv4": "0.0.0.0",
            "ipv6": "::"
        },

        "port": 25565,
        "backlog": 16,
        "simultaneous": 3
    },

    "workers": 2,

    "files": {
        "motd": "@sysconfdir@/craftd/motd.conf.dist"
    },

    "game": {
        "protocol": {
            "name": "survival",

            "worlds": [
                { "name": "world", "default": true }
            ]
        },

        "players": {
            "max": 0
        },

        "standard": true
    },

    "plugin": {
        "paths": [
            "plugins",
            "@libdir@/craftd/plugins"
        ],

        "plugins": [
            { "name": "survival.base",
                "commandChar": "/",

                "rate": {
                    "sunrise": 20,
                    "day": 20,
                    "sunset": 20,
                    "night": 20
                },

            },

            { "name": "survival.persistence.nbt",
                "path": "@datadir@/craftd/worlds"
            },

            { "name": "survival.mapgen.classic",
                "seed": "trolololol"
            },

            { "name": "survival.commands.admin",
                "authorizations": [
                    { "name": "Notch",
                        "password": "faggotree",
                        "level": "admin"
                    }
                ],

                "ticket": {
                    "max": 50
                }
            },

            { "name": "survival.tests" }
        ]
    },

    "scripting": {
        "paths": [
            "scripting",
            "@libdir@/craftd/scripting"
        ],

        "engines": [
            { "name": "lisp",
                "paths": [
                    "scripting/lisp/lib",
                    "scripting/lisp/scripts",
                    "@libdir@/craftd/scripting/lisp",
                    "@libdir@/craftd/scripting/lisp/lib"
                ],

                "options": [],

                "scripts": ["joined"]
            }
        ]
    }
  },

  "httpd": {
    "enabled": true,

    "connection": {
        "bind": {
            "ipv4": "127.0.0.1",
            "ipv6": "::1"
        },

        "port": 25566
    },

    "root": "@datadir@/craftd/htdocs"
  }
}

